<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            <div class="d-flex flex-column comment-section">
                <div class="bg-white p-2">
                    <div class="d-flex flex-row user-info"><img class="rounded-circle" src="<%=@blog.user.profile.avatar_url%>" width="40">
                        <div class="d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name"><%= @blog.user.name %></span><span class="date text-black-50">Created date - <%=@blog.created_at.strftime("%F")%></span></div>
                    </div>
                    <div class="mt-2">
                        <p class="comment-text"><h5>Title: <%= @blog.title %></h5><br>
                        <h5>Content: <%= @blog.content %></h5>.</p>
                    </div>
                </div>

                <div class="blog_comments">
                  <%= render :partial => '/blogs/comments', locals: { blog: @blog, comments: @comments} %>
                </div>
            </div>
        </div>
    </div>
</div>