<div class="form-group">
  <%= f.text_field :address, placeholder: "Address", class: "form-control form-control-lg", required: true %>
</div>

<div class="form-group">
  <%= f.text_field :landmark, placeholder: "Landmark", class: "form-control form-control-lg", required: true %>
</div>

<div class="form-group">
  <%= f.text_field :street, placeholder: "Street", class: "form-control form-control-lg", required: true %>
</div>

<!-- START common attributers which are applicable base on user role block -->
<%= render '/profiles/common_attr', f: f %>
<!-- END common attributers which are applicable base on user role block -->

<div class="form-group">
  <%= f.text_field :city, placeholder: "City", class: "form-control form-control-lg", required: true %>
</div>

<div class="form-group">
  <%= f.text_field :state, placeholder: "State", class: "form-control form-control-lg", required: true %>
</div>

<div class="form-group">
  <%= f.text_field :pincode, minlength: 6, maxlength: 6, pattern: "^[1-9][0-9]{5}$", placeholder: "Pincode", class: "form-control form-control-lg", required: true %>
</div>

<div class="form-group">
  <%= f.file_field :avatar,class: "form-control form-control-lg", required: !f.object.avatar? %>
  <%= image_tag(f.object.avatar_url) if f.object.avatar? %>
</div>