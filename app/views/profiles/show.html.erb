<% profile = @user.profile %>
<ul class="list-group list-group-flush">
  <li class="list-group-item">
  	<%= profile.address %>
  </li>
  <li class="list-group-item">
	<%= profile.landmark %>
  </li>
  <li class="list-group-item">
  	<%= profile.street %>
  </li>
  <li class="list-group-item">
  	<%= profile.phone_no %>
  </li>
  <li class="list-group-item">
  	<%= profile.state %>
  </li>
  <li class="list-group-item">
  	<%= profile.city %>
  </li>
  <li class="list-group-item">
  	<%= profile.pincode %>
  </li>
  <li class="list-group-item">
  	<%= image_tag(profile.avatar_url) if profile.avatar? %>
  </li>
</ul>

<div class="form-group">
	<%= link_to 'Edit Profile', edit_user_profile_path(@user, @user.profile), class: "btn btn-info btn-sm btn-block" %>
</div>