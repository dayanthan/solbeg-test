<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  	<% @users.each do |user| %>
	    <tr>
	      <td>
	      	<%= user.name %>
	      </td>
	      <td>
	      	<%= user.email %>
	      </td>
	      <td>
	      	<%= user.role %>
	      </td>
	      <td>
	      	<% if allowed?(user, current_user) %>
				<%= link_to 'Edit Profile', edit_user_profile_path(user, user.profile) %>
			<% end %>
	      </td>
	    </tr>
    <% end %>
  </tbody>
</table>